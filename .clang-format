AlignTrailingComments: false
AllowShortIfStatementsOnASingleLine: WithoutElse
BraceWrapping:
  BeforeCatch: true
  BeforeElse: true
BreakBeforeBraces: Custom
BasedOnStyle: Chromium
ColumnLimit: 0
IncludeBlocks: Regroup
IncludeCategories:
  - Regex:           '\.h>$'
    Priority:        6
    SortPriority:    0
    CaseSensitive:   false
  - Regex:           '^<'
    Priority:        5
    SortPriority:    0
    CaseSensitive:   false
  - Regex:           '^"lib/'
    Priority:        4
    SortPriority:    0
    CaseSensitive:   false
  - Regex:           '^"include/'
    Priority:        3
    SortPriority:    0
    CaseSensitive:   false
  - Regex:           '^"\.\./'
    Priority:        2
    SortPriority:    0
    CaseSensitive:   false
  - Regex:           '^"'
    Priority:        1
    SortPriority:    0
    CaseSensitive:   false
IndentAccessModifiers: true
IndentExternBlock: Indent
PointerAlignment: Right
ShortNamespaceLines: 1 
SpacesBeforeTrailingComments: 1
